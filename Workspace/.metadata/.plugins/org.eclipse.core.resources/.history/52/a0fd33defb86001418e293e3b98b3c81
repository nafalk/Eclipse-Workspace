package Text_Games_Stuff;

import java.util.Scanner;

public class Menu {

	public static void main(String[] args) throws Exception {
		// TODO Auto-generated method stub


		// Variables
		Scanner input = new Scanner (System.in) ;
		String Choice;



		System.out.println("Shall we play a game?");

		// Response
		Choice = input.nextLine();

		//If statments
		if (Choice.equalsIgnoreCase ("Yes")){
			System.out.println("What game shall we play?");
			System.out.println("Hail Hitler, Battleship or Chess?");
			Choice = input.nextLine();

			if (Choice.equalsIgnoreCase ("Hail Hitler")){
				System.out.println("Intializing Hail Hitler");
				Hail_Hitler.main();
			}

			if (Choice.equalsIgnoreCase ("Battleship")){
				System.out.println("Battleship");
				Battleship.main(null);
			}

			else if (Choice.equalsIgnoreCase ("Chess")){
				System.out.println("Unavailible at this time please try again later.");

			}

			else{
				System.out.println("Invalid input please try again");
				Choice = input.nextLine();
			}
		}


		if (Choice.equalsIgnoreCase ("No")){
			System.out.println("Are you sure?");
			Choice = input.nextLine();

			if (Choice.equalsIgnoreCase ("Yes")){
				System.out.println("Ending game Launcher");
			}

			else{
				System.out.println("Invalid input please try again");
				Choice = input.nextLine();
			}
		}
		
		


		else if (Choice.equalsIgnoreCase ("No")){
			System.out.println("What game shall we play?");
			System.out.println("Hail Hitler, Battleship or Chess?");
			Choice = input.nextLine();

			if (Choice.equalsIgnoreCase ("Hail Hitler")){
				System.out.println("Intializing Hail Hitler");
				Hail_Hitler.main();
			}

			if (Choice.equalsIgnoreCase ("Battleship")){
				System.out.println("Intializing Battleship");
				Battleship.main(null);
			}

			else if (Choice.equalsIgnoreCase ("Chess")){
				System.out.println("Unavalible at this time");
			}
			else{
				System.out.println("Invalid input please try again");
				Choice = input.nextLine();
			}
		}
		
		
		
		else{
			System.out.println("Invalid input please try again");
			Choice = input.nextLine();
			if (Choice.equalsIgnoreCase ("Yes")){
				System.out.println("What game shall we play?");
				System.out.println("Hail Hitler, Battleship or Chess?");
				Choice = input.nextLine();

				if (Choice.equalsIgnoreCase ("Hail Hitler")){
					System.out.println("Intializing Hail Hitler");
					Hail_Hitler.main();
				}

				if (Choice.equalsIgnoreCase ("Battleship")){
					System.out.println("Battleship");
					Battleship.main(null);
				}

				else if (Choice.equalsIgnoreCase ("Chess")){
					System.out.println("Unavailible at this time please try again later.");

				}

				else{
					System.out.println("Invalid input please try again");
					Choice = input.nextLine();
				}
			}


			if (Choice.equalsIgnoreCase ("No")){
				System.out.println("Are you sure?");
				Choice = input.nextLine();

				if (Choice.equalsIgnoreCase ("Yes")){
					System.out.println("Ending game Launcher");
				}

				else{
					System.out.println("Invalid input please try again");
					Choice = input.nextLine();
				}
			}
			
			else if (Choice.equalsIgnoreCase ("No")){
				System.out.println("What game shall we play?");
				System.out.println("Hail Hitler, Battleship or Chess?");
				Choice = input.nextLine();

				if (Choice.equalsIgnoreCase ("Hail Hitler")){
					System.out.println("Intializing Hail Hitler");
					Hail_Hitler.main();
				}

				if (Choice.equalsIgnoreCase ("Battleship")){
					System.out.println("Intializing Battleship");
					Battleship.main(null);
				}

				else if (Choice.equalsIgnoreCase ("Chess")){
					System.out.println("Unavalible at this time");
				}
				else{
					System.out.println("Invalid input please try again");
					Choice = input.nextLine();
				}
			}
		}

	}
}



